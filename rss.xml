---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>GLLara Development Blog</title>
        <link>{{ site.baseurl }}</link>
        <description>News from development of GLLara</description>
        <atom:link href="{{ site.baseurl }}/rss.xml" rel="self" type="application/rss+xml" />
        {% for post in site.posts %}
        <item>
            <title>{{ post.title }}</title>
            <link>{{ site.baseurl }}{{ post.url }}</link>
            <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
            <author>{{ post.author }}</author>
            <guid isPermaLink="true">{{ site.baseurl }}{{ post.url }}</guid>
            <description>{{ post.content | xml_escape }}</description>
        </item>
        {% endfor %}
    </channel>
</rss>
